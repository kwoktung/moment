{
  "name": "journal-project",
  "version": "0.1.0",
  "private": true,
  "scripts": {
    "dev": "next dev --turbopack -p 4000",
    "build": "next build",
    "start": "next start",
    "type-check": "tsc --noEmit",
    "lint": "next lint && yarn type-check",
    "format": "prettier --write .",
    "format:check": "prettier --check .",
    "test": "vitest run",
    "deploy": "opennextjs-cloudflare build && opennextjs-cloudflare deploy",
    "preview": "opennextjs-cloudflare build && opennextjs-cloudflare preview",
    "cf-typegen": "wrangler types --env-interface CloudflareEnv ./cloudflare-env.d.ts",
    "db:generate": "drizzle-kit generate",
    "db:migrate": "wrangler d1 migrations apply journal-project",
    "db:migrate:remote": "wrangler d1 migrations apply journal-project --remote",
    "db:reset": "wrangler d1 migrations reset journal-project",
    "api:generate": "rm -rf openapi.json && wget http://localhost:4000/api/docs -O openapi.json && rm -rf src/lib/api-client && openapi --input ./openapi.json --output ./src/lib/api-client --name ApiClient",
    "secrets:bulk": "wrangler secret bulk .env.production"
  },
  "dependencies": {
    "@hono/zod-openapi": "^1.1.6",
    "@hookform/resolvers": "^5.2.2",
    "@opennextjs/cloudflare": "^1.14.6",
    "@radix-ui/react-alert-dialog": "^1.1.15",
    "@radix-ui/react-avatar": "^1.1.11",
    "@radix-ui/react-label": "^2.1.8",
    "@radix-ui/react-separator": "^1.1.8",
    "@radix-ui/react-slot": "^1.2.4",
    "@scalar/hono-api-reference": "^0.9.30",
    "axios": "^1.13.2",
    "bcryptjs": "^2.4.3",
    "bignumber.js": "^9.3.1",
    "class-variance-authority": "^0.7.1",
    "clsx": "^2.1.1",
    "date-fns": "^4.1.0",
    "drizzle-orm": "^0.45.1",
    "emoji-picker-react": "^4.16.1",
    "hono": "^4.11.1",
    "jose": "^5.9.6",
    "lucide-react": "^0.562.0",
    "next": "15.4.8",
    "next-themes": "^0.4.6",
    "react": "19.2.3",
    "react-dom": "19.2.3",
    "react-hook-form": "^7.68.0",
    "tailwind-merge": "^3.4.0",
    "zod": "^4.2.1"
  },
  "devDependencies": {
    "@eslint/eslintrc": "^3",
    "@tailwindcss/postcss": "^4",
    "@types/bcryptjs": "^2.4.6",
    "@types/node": "^24.3.0",
    "@types/react": "^19",
    "@types/react-dom": "^19",
    "dotenv": "^17.2.3",
    "drizzle-kit": "^0.31.8",
    "eslint": "^9",
    "eslint-config-next": "15.4.8",
    "openapi-typescript-codegen": "^0.29.0",
    "prettier": "3.7.4",
    "tailwindcss": "^4",
    "tsx": "^4.21.0",
    "tw-animate-css": "^1.4.0",
    "typescript": "^5",
    "vitest": "^4.0.16",
    "wrangler": "^4.56.0"
  }
}
