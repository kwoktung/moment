{
  "name": "nextjs-hono-cloudflare",
  "version": "0.1.0",
  "private": true,
  "scripts": {
    "dev": "next dev --turbopack -p 4000",
    "build": "next build",
    "start": "next start",
    "lint": "next lint",
    "format": "prettier --write .",
    "format:check": "prettier --check .",
    "deploy": "opennextjs-cloudflare build && opennextjs-cloudflare deploy",
    "preview": "opennextjs-cloudflare build && opennextjs-cloudflare preview",
    "cf-typegen": "wrangler types --env-interface CloudflareEnv ./cloudflare-env.d.ts",
    "db:generate": "drizzle-kit generate",
    "db:migrate:local": "wrangler d1 migrations apply NextJS-Hono-Cloudflare --local",
    "db:migrate:remote": "wrangler d1 migrations apply NextJS-Hono-Cloudflare",
    "reset": "wrangler d1 migrations reset NextJS-Hono-Cloudflare"
  },
  "dependencies": {
    "@auth/d1-adapter": "^1.11.1",
    "@hono/zod-openapi": "^1.1.5",
    "@opennextjs/cloudflare": "^1.14.6",
    "@radix-ui/react-slot": "^1.2.4",
    "@scalar/hono-api-reference": "^0.9.28",
    "axios": "^1.13.2",
    "bignumber.js": "^9.3.1",
    "class-variance-authority": "^0.7.1",
    "clsx": "^2.1.1",
    "drizzle-orm": "^0.45.1",
    "hono": "^4.11.1",
    "lucide-react": "^0.561.0",
    "next": "15.4.8",
    "next-auth": "^5.0.0-beta.29",
    "react": "19.2.3",
    "react-dom": "19.2.3",
    "tailwind-merge": "^3.4.0",
    "zod": "^4.2.0"
  },
  "devDependencies": {
    "@eslint/eslintrc": "^3",
    "@tailwindcss/postcss": "^4",
    "@types/node": "^24.3.0",
    "@types/react": "^19",
    "@types/react-dom": "^19",
    "dotenv": "^17.2.3",
    "drizzle-kit": "^0.31.8",
    "eslint": "^9",
    "eslint-config-next": "15.4.8",
    "prettier": "3.7.4",
    "tailwindcss": "^4",
    "tsx": "^4.21.0",
    "tw-animate-css": "^1.4.0",
    "typescript": "^5",
    "wrangler": "^4.54.0"
  }
}
